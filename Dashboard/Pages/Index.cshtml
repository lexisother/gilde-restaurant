@page
@using Dashboard.DTO
@model IndexModel
@{
    string path = HttpContext.Request.Path;
    var products = (List<Product>)ViewData["products"];
    ViewData["Title"] = "Home page";
    ViewData["path"] = path;
    ViewData["HeaderText"] = "Welcome back, Alyxia.";
}

<div class="dash-content">
    <div class="list">
        <div class="list-header">
            <h2 class="list-header-text">Statistieken</h2>
        </div>
        <div class="list-content">
            <div class="list-item">
                <div class="list-item-content">
                    <span class="list-item-content-text">Producten: @products.Count</span>
                </div>
            </div>
        </div>
    </div>
</div>